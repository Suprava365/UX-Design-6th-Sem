{
  "info": {
    "name": "Clinic Management - Doctor API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Doctor",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Dr. Smith\",\n  \"specialty\": \"Cardiology\",\n  \"status\": \"active\",\n  \"patientsCount\": 45\n}"
        },
        "url": "{{base_url}}/api/doctors"
      }
    },
    {
      "name": "Get All Doctors",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/doctors"
      }
    },
    {
      "name": "Update Doctor",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"on_leave\"\n}"
        },
        "url": "{{base_url}}/api/doctors/{{doctorId}}"
      }
    },
    {
      "name": "Delete Doctor",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{base_url}}/api/doctors/{{doctorId}}"
      }
    }
  ]
}
